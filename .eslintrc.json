{
  "ignorePatterns": ["/tsc-out/"],
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    // basic recommended rules
    "eslint:recommended",

    // turn off rules that might conflict with prettier
    "prettier"
  ],

  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": [
        // recommended rules for TypeScript
        "plugin:@typescript-eslint/recommended",

        // overwrite config of @typescript-eslint for p5.js
        "@fal-works/p5js/@typescript-eslint",

        // turn off rules of @typescript-eslint that might conflict with prettier
        "prettier/@typescript-eslint"
      ],
      "rules": {
        "no-fallthrough": "off", // already checked by TypeScript
        "@typescript-eslint/no-explicit-any": "off" // it's a little too strict when using p5.js
      }
    },
    {
      "files": ["dist/**/*.js"],
      "extends": [
        // overwrite config for p5.js
        "@fal-works/p5js"
      ],
      "rules": {
        "lines-around-comment": "error"
      }
    },
    {
      "files": ["rollup.config.js"],
      "env": {
        "node": true,
        "browser": false
      }
    }
  ]
}
