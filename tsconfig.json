{
  "include": ["src"],

  "compilerOptions": {
    // emitting JS files
    "outDir": "tsc-out",
    "noEmitOnError": true,

    // output kind
    "target": "ES2015",
    "module": "ESNext",

    // handling source modules
    "isolatedModules": true,

    // checking syntax
    "strict": true,
    "noImplicitReturns": true,

    // formatting
    "newLine": "LF",

    // types to include in compilation
    "types": ["p5/global"]
  }
}
